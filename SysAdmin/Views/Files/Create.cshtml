@model SysAdmin.Models.Files

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Files</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">File</label>
                <input type="file" name="FileUploaded" class="form-control" accept=".pdf,.jpg,.png" />
            </div>
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" class="form-control" />
                <span asp-validation-for="FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileDescription" class="control-label"></label>
                <input asp-for="FileDescription" class="form-control" />
                <span asp-validation-for="FileDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input checked disabled asp-for="FileVerified" /> @Html.DisplayNameFor(model => model.FileVerified)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

